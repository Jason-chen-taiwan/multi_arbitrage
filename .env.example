# Exchange Selection
EXCHANGE_NAME=standx  # Options: standx, grvt

# StandX API Configuration
WALLET_PRIVATE_KEY=your_wallet_private_key_here
WALLET_ADDRESS=your_wallet_address_here
CHAIN=bsc  # or solana

# StandX API URLs
STANDX_BASE_URL=https://api.standx.com
STANDX_PERPS_URL=https://perps.standx.com

# GRVT API Configuration (Optional - for GRVT exchange)
GRVT_API_KEY=your_grvt_api_key_here
GRVT_API_SECRET=your_grvt_api_secret_here
GRVT_BASE_URL=https://api.grvt.io
GRVT_TESTNET=false

# Strategy Configuration
SYMBOL=BTC-USD
BASE_SPREAD=0.001
ORDER_SIZE=0.01
MAX_POSITION=0.5
REFRESH_INTERVAL=5

# Risk Management
MAX_DAILY_LOSS=1000
MAX_POSITION_VALUE=10000
MAX_OPEN_ORDERS=10

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/market_maker.log

# Monitoring
ENABLE_DASHBOARD=true
DASHBOARD_PORT=8080
