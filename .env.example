# Exchange Selection
# DEX: standx, grvt
# CEX: binance, okx, bitget, bybit, gateio
EXCHANGE_NAME=standx

# =====================================================
# StandX API Configuration
# =====================================================
# 方式 1: Token 模式 (推薦)
# 從 StandX 網站獲取 API Token 和 Ed25519 Private Key
STANDX_API_TOKEN=your_api_token_here
STANDX_ED25519_PRIVATE_KEY=your_ed25519_private_key_here

# 方式 2: 錢包簽名模式 (舊方式)
# 使用錢包私鑰進行簽名認證
# WALLET_PRIVATE_KEY=your_wallet_private_key_here
# WALLET_ADDRESS=your_wallet_address_here
# CHAIN=bsc  # or solana

# StandX API URLs
STANDX_BASE_URL=https://api.standx.com
STANDX_PERPS_URL=https://perps.standx.com

# GRVT API Configuration (Optional - for GRVT exchange)
GRVT_API_KEY=your_grvt_api_key_here
GRVT_API_SECRET=your_grvt_api_secret_here
GRVT_TRADING_ACCOUNT_ID=your_trading_account_id_here  # 從 GRVT API 管理頁面獲取
GRVT_BASE_URL=https://api.grvt.io
GRVT_TESTNET=false

# Binance API Configuration (Optional - for Binance exchange)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_TESTNET=false

# OKX API Configuration (Optional - for OKX exchange)
OKX_API_KEY=your_okx_api_key_here
OKX_API_SECRET=your_okx_api_secret_here
OKX_PASSPHRASE=your_okx_passphrase_here
OKX_TESTNET=false

# Bitget API Configuration (Optional - for Bitget exchange)
BITGET_API_KEY=your_bitget_api_key_here
BITGET_API_SECRET=your_bitget_api_secret_here
BITGET_PASSPHRASE=your_bitget_passphrase_here
BITGET_TESTNET=false

# Bybit API Configuration (Optional - for Bybit exchange)
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here
BYBIT_TESTNET=false

# Strategy Configuration
SYMBOL=BTC-USD
BASE_SPREAD=0.001
ORDER_SIZE=0.01
MAX_POSITION=0.5
REFRESH_INTERVAL=5

# Risk Management
MAX_DAILY_LOSS=1000
MAX_POSITION_VALUE=10000
MAX_OPEN_ORDERS=10

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/market_maker.log

# Monitoring
ENABLE_DASHBOARD=true
DASHBOARD_PORT=8080
